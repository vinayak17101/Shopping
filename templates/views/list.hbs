<link href="/css/bootstrap.css" rel="stylesheet">
{{>userHeader}}
<title>List</title>
<div id="content-wrapper">
    <div class="container-fluid">
    <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
            <a href="/home">Home</a>
            </li>
            <li class="breadcrumb-item">
            <a href="/addproduct">Update Stock</a>
            </li>
            <li class="breadcrumb-item active">List</li>
        </ol>
        <div class='container-fluid'>
            {{# if products}}
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <ul class="list-group-item">
                        {{# each products}}
                        <li class="list-group-item">
                            <strong>{{this.item.product}}</strong>
                            <span style="padding-left: 100px;"><a href="/removefromlist/{{this.item._id}}"><button type="button" class="btn btn-danger">Remove Item</button></a>
                            <p>Quantity: {{this.qty}}</p>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <center>
                        <a href="/updatestock"><button type="button" class="btn btn-success">Update Stock</button></a>
                    </center>
                </div>
            </div>
            {{ else }}
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <h2>No Items in the List</h2>
                </div>
            </div>
        </div>
        {{/if}}