<link href="/css/bootstrap.css" rel="stylesheet">
{{>userHeader}}
<div id="content-wrapper">
    <div class="container-fluid">
    <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
            <a href="/home">Home</a>
            </li>
            <li class="breadcrumb-item">
            <a href="/customer">Customer</a>
            </li>
            <li class="breadcrumb-item">
            <a href="/billing">Billing</a>
            </li>
            <li class="breadcrumb-item active">Cart</li>
        </ol>
        <div class='container-fluid'>
            <div class="row">
                
            </div>
        </div>
        <div class='container-fluid'>
            {{# if productsBill}}
            <br>
            <h1>Your Cart</h1>
            <br>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <ul class="list-group-item">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-sm-2 col-md-5">
                                    <strong>
                                        <h4>Product Name</h4>
                                    </strong>
                                </div>
                                <div class="col-sm-4 col-md-4">
                                    <strong>
                                        <h4>Total Price</h4>
                                    </strong>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                </div>
                            </div>
                        </li>
                        {{# each productsBill}}
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-sm-2 col-md-5">
                                    <strong>{{this.item.product}}</strong>
                                    <p>Price: Rs.{{this.item.price}} <br> Quantity: {{this.qty}}</p>
                                </div>
                                <div class="col-sm-4 col-md-4">
                                    <strong>Rs. {{this.price}}</strong>
                                </div>
                                <div class="col-sm-6 col-md-3">
                                    <a href="/removefromcart/{{this.item._id}}"><button type="button" class="btn btn-danger">Remove Item</button></a>
                                </div>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <br>
                <br>
                <div class="col-sm-2 col-md-1">
                    <img src="{{customer.image}}" style="width:127px;height:127px;">
                </div>
                <div class="col-sm-4 col-md-3">
                    <h5> <b>Name:</b> {{customer.name}}</h5>
                    <h5> <b>Credit Amount:</b> <span style="color: red;">Rs. {{customer.credit}}</span></h5>
                    <h5> <b>Debit Amount:</b> <span style="color: blue;">Rs. {{customer.debit}}</span></h5>
                    <h5> <b>Loyality Amount:</b> <span style="color: green;">Rs. {{customer.loyalityPoints}}</span></h5>
                    <br>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <h4><strong>Total Payable Amount: </strong>Rs.{{totalPrice}}</h4>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2 col-md-4">
                    <a href="/finalbill?opt=debit&totalPrice={{totalPrice}}"><button type="button" class="btn btn-primary">Use Debit Money</button></a>
                </div>
                <div class="col-sm-2 col-md-4">
                    <a href="/finalbill?opt=credit&totalPrice={{totalPrice}}"><button type="button" class="btn btn-primary">Credit Bill</button></a>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-2 col-md-4">
                    <a href="/finalbill?opt=loyality&totalPrice={{totalPrice}}"><button type="button" class="btn btn-primary">Use Loyality Points</button></a>
                </div>
                <div class="col-sm-2 col-md-4">
                    <a href="/finalbill?opt=checkout&totalPrice={{totalPrice}}"><button type="button" class="btn btn-primary">Checkout</button></a>
                </div>
            </div>
            <hr>
            {{ else }}
            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <h2>No Items in the Cart</h2>
                </div>
            </div>
        </div>
        {{/if}}